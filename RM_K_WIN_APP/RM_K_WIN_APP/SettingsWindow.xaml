<Window x:Class="RM_K_WIN_APP.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RM_K_WIN_APP"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Add System Tags :-" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="130" Height="37" FontWeight="Bold" BorderThickness="1"/>
        <Label Content="Tag Name: " HorizontalAlignment="Left" Margin="27,47,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.982,0.342"/>
        <TextBox x:Name="txtBxTagName" HorizontalAlignment="Left" Height="26" Margin="123,47,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="134"/>
        <Label Content="Tag UOM : " HorizontalAlignment="Left" Margin="27,96,0,0" VerticalAlignment="Top" Width="69"/>
        <TextBox x:Name="txtBxTagUOM" HorizontalAlignment="Left" Height="26" Margin="123,96,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="134"/>
        <Button x:Name="btnAddTagNames" Content="Add Tag Name" HorizontalAlignment="Left" Margin="92,147,0,0" VerticalAlignment="Top" Width="129" RenderTransformOrigin="-0.384,0.289" Click="btnAddTagNames_Click"/>

    </Grid>
</Window>
